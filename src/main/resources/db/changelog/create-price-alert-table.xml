<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-price-alert-table" author="developer">
        <comment>Create price_alert table to store user price alert configurations</comment>

        <createTable tableName="price_alert">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="frequency" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="last_checked_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="notification_count" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add foreign key constraint -->
        <addForeignKeyConstraint
                baseTableName="price_alert"
                baseColumnNames="product_id"
                referencedTableName="products"
                referencedColumnNames="id"
                constraintName="fk_price_alert_product"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
        <!-- Add check constraint for valid frequencies -->
        <sql>
            ALTER TABLE price_alert ADD CONSTRAINT chk_frequency
            CHECK (frequency IN ('morning', 'midnight'))
        </sql>
        <!-- Add indexes for better query performance -->
        <createIndex indexName="idx_price_alert_user_id" tableName="price_alert">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_price_alert_frequency" tableName="price_alert">
            <column name="frequency"/>
        </createIndex>

        <createIndex indexName="idx_price_alert_active" tableName="price_alert">
            <column name="is_active"/>
        </createIndex>

        <createIndex indexName="idx_price_alert_user_active" tableName="price_alert">
            <column name="user_id"/>
            <column name="is_active"/>
        </createIndex>

        <!-- Add unique constraint for user-product combination -->
        <addUniqueConstraint
                tableName="price_alert"
                columnNames="user_id, product_id"
                constraintName="uk_user_product_alert"/>

    </changeSet>

</databaseChangeLog>